set statusbar-fg "#f7f7df"
set font "dweep 9"
set recolor-lightcolor "#2d2d2d"
set recolor-darkcolor "#f7f7df"
set highlight-color "#f7f7df"
set highlight-active-color "#2d2d2d"
set completion-bg "#2d2d2d"
set completion-fg "#f7f7df"
set completion-group-fg "#f7f7df"
set completion-group-bg "#2d2d2d"
set completion-highlight-bg "#f7f7df"
set completion-highlight-fg "#2d2d2d"
set index-bg "#2d2d2d"
set index-fg "#f7f7df"
set index-active-bg "#f7f7df"
set index-active-fg "#2d2d2d"
set recolor-reverse-video false
